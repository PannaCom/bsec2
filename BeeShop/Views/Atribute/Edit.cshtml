<script>
    
    document.getElementById("order_no").value="@ViewBag.order_no";
    //document.getElementById("parent").value="@ViewBag.parent";
    function Update() {
        var formdata = new FormData(); //FormData object
        var id=@ViewBag.id
        var name = document.getElementById("name").value;
        var description = document.getElementById("description").value;        
        var parent = document.getElementById("parent").value;
        var order_no = document.getElementById("order_no").value;
        //var depth = $("#parent option:selected").attr("depth");
        //depth=parseInt(depth)+1;
        if (name==""){
            alert("@BeeShop.Lang.alert_input_name_field");
            return;
        }
        //alert(depth + "_" + parent);
        //return;
        formdata.append("id", id);
        formdata.append("name", name);
        formdata.append("description", description);        
        formdata.append("parent", parent);      
        formdata.append("order_no", order_no);
        var xhr = new XMLHttpRequest();
        xhr.open('POST', '/Atribute/Edit_Update');
        xhr.send(formdata);
        var content = "";
        xhr.onreadystatechange = function () {
            if (xhr.readyState == 4 && xhr.status == 200) {
                if (xhr.responseText == "1") {
                    //alert("@BeeShop.Lang.alert_save_success");
                    window.location.href = "/Atribute/Index";
                } else {
                    alert("@BeeShop.Lang.alert_save_not_success");
                }
            }
            @*else {
                alert("@BeeShop.Lang.alert_save_not_success");
            }*@
        }
    }
    function getAllNodeAtribute(idselected,parentid) {
        var xhr = new XMLHttpRequest();
        xhr.open('GET', '/Atribute/getAllNodeAtribute?idselected=' + idselected+"&parentid="+parentid);
        xhr.send();
        var content = "";
        xhr.onreadystatechange = function () {
            if (xhr.readyState == 4 && xhr.status == 200) {
                $("#parent").html(xhr.responseText);
                //$("#atributelist").val(value);
                //alert(news);
            }
        }
    }
    getAllNodeAtribute(@ViewBag.id,@ViewBag.parent);
</script>